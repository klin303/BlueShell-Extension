{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BlueShell",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.blueshell",
                    "match": "\\b(if|else|while|for|return|withargs|of|len)\\b"
                }
            ]
		},
		"strings": {
			"name": "string.quoted.blueshell",
			"patterns": [
				{
					"name": "string.quoted.double.blueshell",
                    "begin": "\"",
			        "end": "\"",
					"patterns": [
                        {
                            "name": "constant.character.escape.blueshell",
                            "match": "\\\\."
                        }
                    ]
				},
                {
					"name": "string.quoted.single.blueshell",
                    "begin": "\\'",
			        "end": "\\'"
                }
			]
		}
	},
	"scopeName": "source.bs"
}