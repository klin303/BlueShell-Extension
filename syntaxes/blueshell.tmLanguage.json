{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BlueShell",
	"patterns": [
        {
            "include": "#comments"
        },
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.blueshell",
                    "match": "((^|\\s)//).*$"
                },
                {
                    "name": "comment.block.blueshell",
                    "begin": "\\s*+(\\/\\*)",
					"end": "\\*\\/",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.comment.begin.c"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.comment.end.c"
						}
					}
                }
            ]
        },
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.blueshell",
                    "match": "\\b(if|else|while|for|return|withargs|of|len)\\b"
                }
            ]
		},
		"strings": {
			"name": "string.quoted.blueshell",
			"patterns": [
				{
					"name": "string.quoted.double.blueshell",
                    "begin": "\"",
			        "end": "\"",
					"patterns": [
                        {
                            "name": "constant.character.escape.blueshell",
                            "match": "\\\\."
                        }
                    ]
				},
                {
					"name": "string.quoted.single.blueshell",
                    "begin": "\\'",
			        "end": "\\'"
                }
			]
		}
	},
	"scopeName": "source.bs"
}